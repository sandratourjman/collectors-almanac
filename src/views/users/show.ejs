<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <div class="row"></div>

       <div class="row justify-content-md-center">
           <div class="col-md-11">
            <h4>Account Settings</h4>

            <form>
              <div class="form-group row">
                  <label for="staticUsername" class="col-sm-2 col-form-label">Username</label>
                  <div class="col-sm-8 input-group">
                    <div class="input-group-text">@</div>
                      <input type="text" 
                      readonly class="form-control form-control-plaintext" 
                      id="staticUsername" value="<%= currentUser.username %>">
                  </div>
              </div>
              <div class="form-group row">
                  <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-8">
                      <input type="text" readonly class="form-control form-control-plaintext" id="staticEmail" value="<%= currentUser.email %>">
                  </div>
              </div>
              <div class="form-group row">
                  <label for="staticRole" class="col-sm-2 col-form-label">Account Type</label>
                  <div class="col-sm-8">
                      <input type="text" readonly class="form-control form-control-plaintext" id="staticRole" value="<%= currentUser.role %>">
                  </div>
              </div>
          </form>
          <hr>
          <h4>Account Type</h4>

                        
            <% if(currentUser && currentUser.role === "standard") { %>
              <p>You are currently a standard user. If you want to create multiple collections, please upgrade to a premium account.</p>
              <a href="/users/<%= currentUser.id %>/upgrade" class="btn btn-success btn-sm">Upgrade</a>
            <% } else if (currentUser.role === "premium") { %>
             <p>You are currently a premium user. Please confirm to downgrade to a standard account.</p>
             <form style="display:initial" action="/users/<%= currentUser.id %>/downgrade" method="post">
               <button type="submit" class="btn btn-danger btn-sm">Downgrade Account</button>
            </form>
            <br>
            <small>Premium Features will no longer be available and all collections will be merged.</small>
           <% } %>

           <div class="row"></div><div class="row"></div>

           <div class="row">
            <div class="col-md-11">
              <a href="/" class="btn btn-outline-dark btn-sm" style="margin-right: 10px">Back to Home</a>
              <a href="/collections" class="btn btn-outline-dark btn-sm">Back to Collections</a>
             </div>
           </div>



           </div>
         </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>