<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

         <div class="row">
           <div class="col-md-8">
             <h4>Sign up</h4>
             <form method="POST" action="/users/sign_up">
               <div class="form-group">
                 <label>Username:</label>
                 <input type="text" name="username" placeholder="Enter Username" class="form-control"/>
                 <small class="text-muted" id="usernameHelp">Username must be unique</small>
               </div>
               <div class="form-group">
                 <label>Email:</label>
                 <input type="email" name="email" placeholder="Enter Email" aria-describedby="emailHelp" class="form-control"/>
                 <small class="text-muted" id="emailHelp">email address must be a valid address</small>
               </div>
               <div class="form-group">
                 <label>Password:</label>
                 <input type="password" name="password" placeholder="Enter Password" class="form-control"/>
                 <small class="text-muted" id="passwordHelp">password must match confirmation below</small>
               </div>
               <div class="form-group">
                 <label>Password:</label>
                 <input type="password" name="password_conf" placeholder="Enter Password confirmation" aria-describedby="passwordHelp" class="form-control"/>
                 
               </div><br/>
               <input type="submit" value="Sign Up" class="btn btn-primary"/>
             </form>

           </div>
         </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>